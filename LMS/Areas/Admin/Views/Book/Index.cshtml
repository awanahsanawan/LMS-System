@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-9">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-3 text-center">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Book</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblData" class="table table-striped table-bordered my-3 " style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Author Name</th>
                <th>Edition</th>
                <th>Edit / Delete</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/book.js"></script>
}
@model LMS.Models.ViewModels.CartViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    @if (Model.BookList.Count > 0)
    {
<br />
                <div class="backgroundWhite container">
                    <div class="card">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-12 d-none d-md-block col-md-6 pb-1">
                                <i class="fas fa-shopping-cart"></i> &nbsp; Shopping Cart
                            </div>
                            <div class="col-12 col-md-4 offset-md-2 text-right">
                                <a asp-action="Index" asp-controller="Home" asp-area="Student" class="btn btn-outline-info form-control btn-sm">Shopping Cart</a>
                            </div>
                        </div>
                        <div class="card-body">
                            @{ var orderTotal = 0.0; }

                            @foreach (var item in Model.BookList)
                            {
                               
            <div class="row">
                <div class="d-none d-md-block col-md-2 text-center py-2">
                    <img src="@item.ImageUrl" class="rounded" width="100%" />
                </div>
                <div class="col-12 col-md-5 text-md-left pt-3">
                    <h5><strong class="text-primary">@item.Title</strong></h5>
                    
                    <h5 class="text-secondary"><small>@item.Author.Name</small></h5>
                </div>
                <div class="col-12 col-md-5 row pt-3">
                    <div class="col-6 text-md-right" style="padding-top:5px;">
                       
                    </div>
                    <div class="col-6 text-right">
                        <button type="submit" class="btn btn-outline-danger" asp-action="Remove" asp-route-bookId="@item.Id">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
                                <hr />}

                            <div class="row">
                                <div class="col-12 text-right pr-4">
                                    <p class="text-success h5">Total (USD): &nbsp;&nbsp; $@orderTotal</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 text-right">
                                <a asp-action="Summary" asp-area="Student" asp-controller="Cart" class="btn btn-success form-control">Summary</a>
                            </div>
                        </div>
                    </div>
                </div> }
                            else
                            {
                <div class="backgroundWhite"> No items added to the booking cart...</div>}
</form>


